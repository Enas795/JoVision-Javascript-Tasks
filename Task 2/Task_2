<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task_2</title>
    <style>
        /* 1. Make the body take up the full viewport height */
        body {
            /* Ensures the body takes up the full height of the browser window */
            min-height: 100vh;
            /* Remove default margin for better centering */
            margin: 0;
            /* 2. Enable Flexbox on the body */
            display: flex;
            /* 3. Center the button horizontally */
            justify-content: center;
            /* 4. Center the button vertically */
            align-items: center;
        }
        /* Basic styling for the button*/
        #myButton {
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <button id="myButton">Click me</button>
    <script>
        document.getElementById('myButton').addEventListener('click', function() {
            console.log("Hello World");
        });
    </script>
