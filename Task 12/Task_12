<body>
    <h1>User Information</h1>
    <div>
        <label for="nameInput">Name</label>
        <input type="text" id="nameInput" placeholder="Name">
    </div>
    <div>
        <label for="ageInput">Age</label>
        <input type="text" id="ageInput" placeholder="Age">
    </div>
    <button onclick="submitData()">Submit</button>
    <script>
        function submitData() {
// 1. Get the values from the text fields
            const name = document.getElementById('nameInput').value;
            const age = document.getElementById('ageInput').value;
// Basic validation: prevent execution if fields are empty
            if (!name || !age) {
                alert("Please enter both Name and Age.");
                return;
            }
// 2. Create the data object
            const userData = {
                "name": name,
                "age": age,
                "timestamp": new 
// Get current date and time              
Date().toLocaleString() 
            };
// 4. Object deconstruction
            const { name: userName, age: userAge, timestamp: submitTime } = userData;
// 5. Create the message for the window popup (Alert box)
            const popupMessage = `
                Your name is: ${userName}
                Your age is: ${userAge}
                Timestamp: ${submitTime}
            `;
// 6. Display the window popup
            alert(popupMessage);
        }
    </script>
</body>
