<body>
<h1>Estimate the Age of a Name</h1>
    <div>
        <label for="nameInput">Name</label>
        <input type="text" id="nameInput" placeholder="Name">
    </div>
    <button onclick="getPredictedAge()">Submit</button>
    <script>
        async function getPredictedAge() {
// 1. Get the name from the input field
            const name = document.getElementById('nameInput').value.trim();
            if (!name) {
                alert("Please enter a name before submitting.");
                return;
            }
// 2. Construct the API URL with the required query parameter
            const API_URL = `https://api.agify.io/?name=${encodeURIComponent(name)}`;
            try {
// 3. Make the API request
//    'await' pauses execution until the response object is received.
                const response = await fetch(API_URL);
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
// 4. Parse the JSON body
//    'await' pauses execution until the data is parsed into a JS object.
                const data = await response.json();
// 5. Object Deconstruction: Extract 'name' and 'age' from the response object
                const { name: receivedName, age } = data;
// 6. Create the message using the extracted variables
                const popupMessage = `
                    Your name is: ${receivedName}
                    Your age is: ${age}
                    (Age is an estimate from agify.io)
                `;
// 7. Display the window popup
                alert(popupMessage);

            } catch (error) {
// Handle network or parsing errors
                console.error("Failed to fetch age data:", error);
                alert(`Error: Could not retrieve age for "${name}". Check console for details.`);
            }
        }
    </script>
</body>
</html>
