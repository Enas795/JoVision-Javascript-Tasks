<body>
    <button id="getIpButton">Get IP</button>
    <script>
        const button = document.getElementById('getIpButton');
        const API_URL = "https://api.ipify.org/";
 document.addEventListener('DOMContentLoaded', function() {           
            button.addEventListener('click', function() {      
                console.log("Requesting IP address...");
// Javascript: Requests (Fetch API)
                fetch(API_URL)
                    .then(response => {
// We use .text() so ipify returns a plain text response, not JSON.
                        if (!response.ok) {
                            throw new Error(`HTTP error! Status: ${response.status}`);
                        }
                        return response.text();
                    })
                    .then(ipAddress => {
// Print the response (the IP address string) to the console
                        console.log("✅ Your Public IP Address is:", ipAddress);
                    })
                    .catch(error => {
// Handling any errors during the request
                        console.error("❌ Failed to fetch IP address:", error);
                    });

            });
        });
    </script>
</body>
</html>
